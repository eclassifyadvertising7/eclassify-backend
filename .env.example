# Server Configuration
NODE_ENV=development
PORT=5000
BASE_URL=http://localhost:5000

# Database Configuration
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://postgres:1234@Abhi@localhost:5432/eclassify_database

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
ACCESS_TOKEN_EXPIRY=7d
REFRESH_TOKEN_EXPIRY=30d

# Frontend & CORS Configuration
FRONTEND_URL=http://localhost:3000
CORS_ORIGIN=http://localhost:3000

# Storage Configuration
# Options: local, cloudinary, s3
STORAGE_TYPE=local
UPLOAD_DIR=./uploads

# Cloudinary Configuration (if STORAGE_TYPE=cloudinary)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# AWS S3 Configuration (if STORAGE_TYPE=s3)
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# Email Configuration (Gmail SMTP)
# For Gmail, you need to use App Password, not your regular password
# 1. Enable 2-Factor Authentication on your Gmail account
# 2. Go to Google Account settings > Security > App passwords
# 3. Generate an app password for "Mail"
# 4. Use that app password below (not your regular Gmail password)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-gmail@gmail.com
EMAIL_PASSWORD=your-16-character-app-password
EMAIL_FROM=your-gmail@gmail.com
EMAIL_SECURE=false

# SMS Configuration (Dovesoft API)
SMS_API_KEY=22b98dXX
SMS_SENDER_ID=wayshr

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:5000/api/auth/google/callback

# Invoice & Transaction Number Configuration
INVOICE_PREFIX=ECA
TRANSACTION_PREFIX=TXN

# Map Provider Configuration
# Supported providers: ola_maps, google_maps, mapbox, manual
MAP_PROVIDER=ola_maps

# Logging Configuration
LOG_LEVEL=debug
LOG_TO_FILE=true
LOG_DIR=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=14
LOG_TO_CONSOLE=true
LOG_COLORIZE=true

# SQL Query Logging (set to true only when debugging database issues)
SQL_LOGGING_ENABLED=false

# Note: Cron jobs run automatically when server starts (no separate command needed)
# On Render free tier, they may be unreliable due to server spin-down after 15min inactivity
# System works fine without them - just some stale data (expired offers, inactive rooms)
